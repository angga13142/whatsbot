{
  "name": "whatsapp-cashflow-bot",
  "version": "1.0.0",
  "description": "WhatsApp Bot untuk tracking cashflow real-time dengan role-based access control (Superadmin, Admin, Karyawan, Investor)",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js --ignore 'storage/**' --ignore '.wwebjs_auth/**'",
    "test": "jest --coverage --verbose",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --ci --maxWorkers=2 --silent",
    "lint": "eslint src/**/*.js tests/**/*.js",
    "lint:fix": "eslint src/**/*.js tests/**/*.js --fix",
    "lint:staged": "lint-staged",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\" \"*.{json,md,yml,yaml}\"",
    "format:check": "prettier --check \"src/**/*.js\" \"tests/**/*.js\" \"*.{json,md,yml,yaml}\"",
    "validate": "npm run lint && npm run format:check && npm run test",
    "migrate": "node scripts/migrate.js",
    "migrate:rollback": "node scripts/migrate-rollback.js",
    "seed": "node scripts/seed.js",
    "backup": "node scripts/backup.js",
    "backup:restore": "node scripts/restore-backup.js",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "prepare": "husky install",
    "setup": "bash scripts/setup-foundation.sh",
    "setup:windows": "scripts/setup-foundation.bat",
    "structure": "bash scripts/create-structure.sh",
    "prebuild": "npm run validate",
    "build": "echo 'Build process completed'",
    "precommit": "lint-staged",
    "prepush": "npm run test:ci",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "chatbot",
    "cashflow",
    "tracker",
    "accounting",
    "finance",
    "automation",
    "nodejs",
    "role-based-access"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com",
    "url": "https://github.com/yourusername"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/whatsapp-cashflow-bot.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/whatsapp-cashflow-bot/issues"
  },
  "homepage": "https://github.com/yourusername/whatsapp-cashflow-bot#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "boxen": "^5.1.2",
    "chalk": "^4.1.2",
    "chartjs-node-canvas": "^4.1.6",
    "cli-table3": "^0.6.3",
    "compromise": "^14.10.0",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "knex": "^3.1.0",
    "node-cron": "^3.0.3",
    "ora": "^5.4.1",
    "pdfkit": "^0.14.0",
    "pg": "^8.11.3",
    "qrcode-terminal": "^0.12.0",
    "sqlite3": "5.1.7",
    "validator": "^13.11.0",
    "whatsapp-web.js": "^1.23.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/node": "^20.10.6",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "standard-version": "^9.5.0",
    "supertest": "^6.3.3"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
