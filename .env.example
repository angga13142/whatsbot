# ══════════════════════════════════════════════════════════
# APPLICATION CONFIGURATION
# ══════════════════════════════════════════════════════════
NODE_ENV=development
APP_NAME="Cashflow Tracker Bot"
APP_VERSION=1.0.0
PORT=3000

# ══════════════════════════════════════════════════════════
# WHATSAPP BOT CONFIGURATION
# ══════════════════════════════════════════════════════════

# Bot Phone Number (international format, no + or spaces)
# Example: 628123456789 for +62 812-3456-789
BOT_PHONE_NUMBER=628123456789

# Bot Display Name
BOT_NAME="Cashflow Bot"

# Authentication Method
# Options: "qr" or "pairing"
# - qr: Show QR code to scan (good for development)
# - pairing: Use pairing code (recommended for production/VPS)
AUTH_METHOD=pairing

# WhatsApp Web.js Settings
WWEBJS_AUTH_PATH=./storage/auth
WWEBJS_CLIENT_ID=cashflow-bot-prod

# Puppeteer Configuration
PUPPETEER_HEADLESS=true
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=false
PUPPETEER_ARGS=--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage

# ══════════════════════════════════════════════════════════
# DATABASE CONFIGURATION
# ══════════════════════════════════════════════════════════

# Database Type
# Options: "sqlite" (development) or "postgresql" (production)
DB_TYPE=sqlite

# SQLite (Development)
DB_PATH=./storage/database.sqlite

# PostgreSQL (Production) - Uncomment when using PostgreSQL
# DB_TYPE=postgresql
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=cashflow_db
# DB_USER=postgres
# DB_PASSWORD=your_secure_password
# DB_SSL=false
# DB_POOL_MIN=2
# DB_POOL_MAX=10

# ══════════════════════════════════════════════════════════
# SECURITY CONFIGURATION
# ══════════════════════════════════════════════════════════

# Two-Factor Authentication (2FA)
TWO_FA_ENABLED=true
TWO_FA_PIN_LENGTH=6
TWO_FA_MAX_ATTEMPTS=3
TWO_FA_LOCKOUT_MINUTES=30

# Encryption (for sensitive data)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-32-character-secret-key-change-this-in-production
ENCRYPTION_ALGORITHM=aes-256-cbc

# Session Security
SESSION_SECRET=your-session-secret-key-change-this
SESSION_MAX_AGE_HOURS=24

# ══════════════════════════════════════════════════════════
# BUSINESS LOGIC CONFIGURATION
# ══════════════════════════════════════════════════════════

# Transaction Auto-Approval
# Transactions below this amount will be auto-approved
# Above this amount requires manual approval from Admin/Superadmin
AUTO_APPROVAL_THRESHOLD=1000000

# Daily Report Schedule
# Time in 24-hour format (HH:mm)
DAILY_REPORT_TIME=18:00

# Timezone
# Reference: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
TIMEZONE=Asia/Jakarta

# Transaction Types
# Comma-separated list
TRANSACTION_TYPES=paket,utang,jajan

# Currency
CURRENCY=IDR
CURRENCY_SYMBOL=Rp

# ══════════════════════════════════════════════════════════
# BACKUP CONFIGURATION
# ══════════════════════════════════════════════════════════

# Automatic Backup
AUTO_BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./storage/backups

# Backup Compression
BACKUP_COMPRESS=true

# ══════════════════════════════════════════════════════════
# LOGGING CONFIGURATION
# ══════════════════════════════════════════════════════════

# Log Level
# Options: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info

# Log Files
LOG_PATH=./storage/logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14d

# Console Logging
LOG_CONSOLE=true
LOG_CONSOLE_COLORIZE=true

# ══════════════════════════════════════════════════════════
# FILE UPLOAD CONFIGURATION
# ══════════════════════════════════════════════════════════

# Maximum file size for transaction images (in MB)
MAX_IMAGE_SIZE_MB=5

# Allowed image types (comma-separated)
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,pdf

# Image storage path
IMAGE_STORAGE_PATH=./storage/images

# ══════════════════════════════════════════════════════════
# RATE LIMITING
# ══════════════════════════════════════════════════════════

# Rate limit window in milliseconds (default: 1 minute)
RATE_LIMIT_WINDOW_MS=60000

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=20

# ══════════════════════════════════════════════════════════
# NOTIFICATION CONFIGURATION (Optional)
# ══════════════════════════════════════════════════════════

# Email Notifications (for critical system alerts)
# SMTP_ENABLED=false
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@cashflow-bot.com
# SMTP_TO_ADMIN=admin@example.com

# Telegram Bot (for admin notifications)
# TELEGRAM_ENABLED=false
# TELEGRAM_BOT_TOKEN=your-telegram-bot-token
# TELEGRAM_ADMIN_CHAT_ID=your-chat-id

# ══════════════════════════════════════════════════════════
# DEFAULT SUPERADMIN (First User)
# ══════════════════════════════════════════════════════════

# This user will be created on first setup
SUPERADMIN_PHONE=628123456789
SUPERADMIN_NAME=Administrator
SUPERADMIN_PIN=123456

# ══════════════════════════════════════════════════════════
# REPORT GENERATION
# ══════════════════════════════════════════════════════════

# Report storage path
REPORT_STORAGE_PATH=./storage/reports

# Report formats enabled
REPORT_FORMATS_ENABLED=text,excel,pdf

# Report cache duration (in minutes)
REPORT_CACHE_DURATION=30

# ══════════════════════════════════════════════════════════
# FEATURE FLAGS
# ══════════════════════════════════════════════════════════

# Enable/disable features
FEATURE_NLP_PARSING=true
FEATURE_IMAGE_UPLOAD=true
FEATURE_EXPORT_REPORTS=true
FEATURE_REMINDERS=true
FEATURE_ANALYTICS=true

# ══════════════════════════════════════════════════════════
# DEVELOPMENT / DEBUG
# ══════════════════════════════════════════════════════════

# Debug mode
DEBUG=false

# Mock WhatsApp (for testing without real WhatsApp connection)
MOCK_WHATSAPP=false

# Test mode
TEST_MODE=false
